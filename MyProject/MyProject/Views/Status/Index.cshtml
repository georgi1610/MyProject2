@model IEnumerable<MyProject.Models.Status>

@{
    ViewBag.Title = "Index";
}

<h2>Statuses</h2>

<p>
    @Html.ActionLink("Add New Status", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.StatusName.Equals("New"))
            {
                <img src="../images/new.jpg" />
            }
            @if (item.StatusName.Equals("Approved"))
            {
                <img src="../images/active.jpg" />
            }
            @if (item.StatusName.Equals("Closed (Denied)") ||
                 item.StatusName.Equals("Denied"))
            {
                <img src="../images/deactivated.jpg" />
            }
            @if (item.StatusName.Equals("Closed"))
            {
                <img src="../images/closed_approved.jpg" />
            }
            @Html.DisplayFor(modelItem => item.StatusName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StatusId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StatusId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StatusId })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back", "../Home/Admin")