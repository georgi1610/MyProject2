@model MyProject.Models.Request

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    @{  var image = Model.Status.StatusName;
    }
    <div style="padding:10px;">
        @if (image == "New")
        {
            <img src="@Url.Content("~/images/status_new.jpg")" width="454" height="62" alt="new request" />
        }
        @if (image == "Approved")
        {
            <img src="@Url.Content("~/images/status_approved.jpg")" width="454" height="62" alt="approved request" />
        }
        @if (image == "Denied")
        {
            <img src="@Url.Content("~/images/status_denied.jpg")" width="454" height="62" alt="denied request" />
        }
        @if (image == "Closed")
        {
            <img src="@Url.Content("~/images/status_closed.jpg")" width="454" height="62" alt="closed request" />
        }
        @if (image == "Closed (Denied)")
{
    <img src="@Url.Content("~/images/status_denied_closed.jpg")" width="454" height="62" alt="closed request" />
}
    </div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Delegation.DelegationType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Delegation.DelegationType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubmitDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubmitDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartureDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Motivation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Motivation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Approver)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Approver.FullName)
        </dd>
        @if(Model.TransportId != null)
        {
            <p><br /><b>Transport Details</b></p>
            <dt>
                @Html.DisplayNameFor(model => model.Transport.TransportComp.CompanyName)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Transport.TransportComp.CompanyName)
            </dd>
            
            <dt>
                Driver
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Transport.Driver.FullName)
            </dd>
            
            <dt>
                Departure
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Transport.DepartureAddress) -
                @Html.DisplayFor(model => model.Transport.DepartureDateTime) -
                @Html.DisplayFor(model => model.Transport.DepartureTime)
            </dd>
            
            <dt>
                Arrival
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Transport.ArrivalAddress) -
                @Html.DisplayFor(model => model.Transport.ArrivalDateTime) -
                @Html.DisplayFor(model => model.Transport.ArrivalTime)
            </dd>
        }
    </dl>
</div>
<hr/>
<p>
    @if (!(Model.Status.StatusName.Equals("New")) && 
         !(Model.Status.StatusName.Equals("Closed")) &&
         !(Model.Status.StatusName.Equals("Closed (Denied)")))
    {<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RequestId }) |
    @Html.ActionLink("Back to main page", "Index") </p>
    }
    else
    { 
        @Html.ActionLink("Back to main page", "Index") 
    }
</p>
