@model IEnumerable<MyProject.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Status
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuperiorEmployee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if(item.EndDate.Year == 1800)
            {
                <p><img src="../images/active.jpg" />Active</p>
            }
            @if(item.EndDate.Year > 1800)
            {
                <p><img src="../images/deactivated.jpg" />
                    Deactivated</p>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuperiorEmployee.FullName)
        </td>
        <td>
            @if (item.EndDate.Year == 1800)
            {<p>
                @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
                @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) | 
                @Html.ActionLink("Deactivate", "Delete", new { id=item.EmployeeId }) </p>
            }
            @if (item.EndDate.Year > 1800)
            {
                @Html.ActionLink("Details", "Details", new { id=item.EmployeeId })
            }
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back", "../Home/Admin")